@using ProjectFive.AppFunctions;
@model ProjectFive.Models.RestaurantModel
@inject CookieHandler Handler

@{
    ViewData["Title"] = Model.Name;
}

<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/restaurant.css" />

    <style>

        table {
            text-align: center;
        }
        th, td{
            justify-content:center;
        }

        .wrapper{
            background: transparent;
            border: 2px solid rgba(255,255,255, .2);
            backdrop-filter: blur(20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, .2);
            color: #fff;
            border-radius: 10px;
            padding: 30px 40px;
            margin:auto;
        }
    </style>

</head>

<body>
    @{
        Context.Request.Cookies.TryGetValue("UserCookie", out string value);
        string role = "";
        if (value != null)
        {
            role = Handler.ReadCookie("Role", value);
        }
    }
    <header>
        <div class="navbar">
            <div class="logo"><a href="#">DishDetective</a></div>
            <ul class="links">
                <li><a asp-action="Restaurants" asp-controller="Restaurant">Home</a></li>
                <li><a asp-action="Restaurants" asp-controller="Restaurant">Restaurants</a></li>
                @{
                    if (role == "Representative")
                    {
                        <li><a asp-action="Representative" asp-controller="Reservation">Reservations</a></li>
                        <li><a asp-action="Rep" asp-controller="Review">Reviews</a></li>
                    }
                    else if (role == "Reviewer")
                    {
                        <li><a asp-action="Review" asp-controller="Review">Reviews</a></li>
                    }
                }

            </ul>
            @{
                if (value != null)
                {
                    <a asp-action="Logout" asp-controller="Login" class="action_btn">Logout</a>
                }
                else
                {
                    <a asp-action="Login" asp-controller="Login" class="action_btn">Login</a>
                }
            }
            <div class="toggle_btn">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>

        <div class="dropdown_menu">
            <li><a href="home">Home</a></li>
            <li><a href="restaurant">Restaurants</a></li>
            <li><a href="reservation">Reservations</a></li>
            <li><a href="review">Reviews</a></li>
            <li><a href="#" class="action_btn">Login</a></li>
        </div>
    </header>
    <br />
    <br />
    <div class="wrapper">
        <h1>@Model.Name</h1>
        <div class="text-center">
            <img src="@Model.Image" height="250" width="300" />
        </div>
        <div class="description">
            <h3>About</h3>
            <p>@Model.Description</p>
        </div>
        <br />
        <br />


        @{
            List<ReviewModel> reviews = ReviewApi.ListAllReviews();
            List<ReviewModel> toDisplay = new List<ReviewModel>();
            foreach(ReviewModel r in reviews)
            {
                if(r.ResturantID == Model.ID)
                {
                    toDisplay.Add(r);
                }
            }
        }

        <div class="rtable">
            <table class="table table-dark table-striped table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <td>Description</td>
                        <td>Food Rating</td>
                        <td>Service Rating</td>
                        <td>Atmosphere Rating</td>
                        <td>Price Rating</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rev in toDisplay)
                    {
                        <tr>
                            <td>@rev.Description</td>
                            <td>@rev.FoodRating</td>
                            <td>@rev.ServiceRating</td>
                            <td>@rev.AtmosphereRating</td>
                            <td>@rev.PriceRating</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
    <br /> <br/>
    <div class="wrapper">

        <form id="menuSearch" asp-action="Menu" asp-controller="Menu" method="post">
            <input type="hidden" name="menuSearch" value="@Model.Name" />
            <button type="submit" id="Menu" class="btn btn-primary">Search for the Menu!</button>
        </form>

        <br /> <br />
       
        @{
            if(role == "Reviewer")
            {
                <form id="add" asp-action="Add" asp-controller="Review" method="post">
                    <input type="hidden" name="selectedRestaurant" value="@Model.ID" />

                    <button type="submit" id="Review" class="btn btn-primary">Write a Review!</button>
                </form>
            }
        }
      
       
        <br /> <br/>

        @{
            if(value != null)
            {
                int id = int.Parse(Handler.ReadCookie("ID", value));

                if(id == Model.Representative_ID)
                {
                    <div class="row">
                        <div class="col-sm">
                            <form method="post" asp-action="EditRestaurant">
                            <input type="hidden" name="rid" value="@Model.ID" />
                            <input class="btn btn-primary" type="submit" value="Edit Restaurant" />
                            </form>
                        </div>
                        <div class="col-sm">
                            <form method="post" asp-action="DeleteRestaurant">
                                <input type="hidden" name="rid" value="@Model.ID" />
                                <input class="btn btn-primary" type="submit" value="Delete Restaurant" />
                            </form>
                        </div>
                    
                        
                    </div>
                    
                    <br /> <br />
                }

                if((Model.Representative_ID == 0 || Model.Representative_ID == null) && role == "Representative")
                {
                    <div class="row">
                        <form method="post" asp-action="UpdateRepresentative">
                            <input type="hidden" name="rid" value="@Model.ID" />
                            <input type="hidden" name="repid" value="@id" />
                            <input class="btn btn-primary" type="submit" value="Claim Restaurant" />
                        </form>
                    </div>
                    <br /> <br />
                }
            }

          
        }      
    </div>

</body>